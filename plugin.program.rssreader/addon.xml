       version="0.5.1"
       provider-name="Taxigps, Rabbitgg">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
    </requires>
    <extension
        point="xbmc.python.pluginsource"
        library="default.py">
        <provides>executable</provides>
